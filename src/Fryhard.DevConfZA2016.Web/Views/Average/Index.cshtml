<!DOCTYPE html>
<html style="background-color:transparent;border:none;">
<head>
    <meta charset=" utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
</head>
<body style="background-color:transparent;border:none;">
    
    <img id="globalresults" src="~/Content/Images/smile/UnknownResult.png" width="50px" />
    
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script type="text/javascript">
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var voteHub = $.connection.voteHub;

            // Create a function that the hub can call back to display messages.
            voteHub.client.updateAverage = function (avgAnswer) {
                var imageNum = avgAnswer + 2;
                $('#globalresults').attr("src", "/Content/Images/smile/" + imageNum + "_Result.png");
            };

            // Start the connection.
            $.connection.hub.start().done();
        });
    </script>
</body>
</html>
